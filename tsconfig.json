{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@assets/*": ["src/assets/*"],
      "@lib/*": ["src/lib/*"],
      "@layouts/*": ["src/layouts/*"],
      "@styles/*": ["src/styles/*"],
      "@pages/*": ["src/pages/*"],
      "@utils/*": ["src/utils/*"],
      "@/*": ["src/*"]
    },
    "types": [
      "unplugin-icons/types/astro"
    ]
  },
  "include": [
    ".astro/types.d.ts",
    "types/*",
    "**/*"
  ],
  "exclude": ["dist"]
}